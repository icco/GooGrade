<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="blugoo" namespace="/blugoo" extends="struts-default">

        <action name="HelloWorld" class="blugoo.HelloWorld">
            <result>/blugoo/HelloWorld.jsp</result>
        </action>

        <action name="Login_*" method="{1}" class="blugoo.Login">
            <result name="input">/blugoo/Login.jsp</result>
            <result type="redirectAction">Menu</result>
        </action>

        <action name="*" class="blugoo.ExampleSupport">
            <result>/blugoo/{1}.jsp</result>
        </action>

        <!-- Add actions here -->
    </package>
</struts>
